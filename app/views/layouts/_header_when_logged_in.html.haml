%nav.navbar.navbar-default{role: "navigation"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to root_path do
        .ico-tree-sm.navbar-brand

    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        = render 'layouts/all_user_links'
        - if current_user.admin?
          %li= link_to "Admin", admin_path
        - if current_user.investor?
          %li= link_to "Browse", profiles_path
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to '<span class="glyphicon glyphicon-envelope"></span> Messages'.html_safe, conversations_path
        %li
          = link_to '<span class="glyphicon glyphicon-user"></span> Profile'.html_safe, user_path(current_user)
        %li
          = link_to "Sign out", destroy_user_session_path, method: "delete"
