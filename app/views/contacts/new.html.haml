.row
  .col-md-6.col-md-offset-3
    .contact-panel.panel.panel-default
      .panel-heading
        %h3.panel-title Feedback
      .panel-body
        = form_for @contact, :html => {:class => 'input-form' } do |f|
          = f.text_field :name, :autofocus => true, placeholder: "Name", class: "form-control"
          = f.text_field :email, :autofocus => true, placeholder: "Email", class: "form-control"
          = f.text_area :message, :autofocus => true, placeholder: "Message", :rows => "5", class: "form-control"
          .submit-container
            = f.submit "Send", :class => "btn btn-default text-center"
        .thanks-container
          %p We welcome all feedback regarding our site. Please be detailed and let us know if you are an entrepreneur or listener
          %p Thank you,
          %p Maple and Oak Team

