= form_for(@profile) do |f|
  - if @profile.not_submitted?
    = f.hidden_field :submitted, :value => true
    = f.submit "Submit for Approval", class: "btn btn-success btn-sm pull-left btn-group-item", data: { confirm: "Click OK to submit your profile for approval." }
  - if @profile.pending_approval?
    = f.hidden_field :submitted, :value => false
    = f.submit "Revoke Submission", class: "btn btn-success btn-sm pull-left btn-group-item", data: { confirm: "Click OK to revoke your submission for approval." }
  - if @profile.approved? && @profile.not_published?
    = f.hidden_field :published, :value => true
    = f.submit "Publish", class: "btn btn-success btn-sm pull-left btn-group-item", data: { confirm: "Click OK to publish your profile." }
  - if @profile.approved? && @profile.published?
    = f.hidden_field :published, :value => false
    = f.submit "Unpublish", class: "btn btn-success btn-sm pull-left btn-group-item", data: { confirm: "Click OK to unpublish your profile." }
