.row
  %h1.text-center Select Plan
  .col-md-6.col-md-offset-3
    %table.table.table-bordered
      %thead
        %tr
          %th Name
          %th Price

      %tbody
        - for plan in @plans
          %tr
            %td
              = button_to plan.name, plan_path(plan: plan), class: "btn btn-primary", method: "get"
              .plan-description
                - plan.description.split(".").each do |s|
                  %li=s

            %td= number_to_currency plan.price
